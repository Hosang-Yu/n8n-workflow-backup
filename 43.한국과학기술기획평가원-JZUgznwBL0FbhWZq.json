ction normalizeFileName(name) {\n    return name\n        ?.replace(/[\\n\\r\\t]/g, \"\")                           // 줄바꿈, 탭 제거\n        .replace(/\\(파일크기:\\s*[\\d\\.]+[KMG]?B\\s*\\)/gi, \"\")  // (파일크기: 2 MB) 제거\n        .trim();\n}\n\nfunction normalizeFileUrl(address) {\n    if (!address) return null;\n    if (address.startsWith(\"http\")) return address;\n    return `${baseUrl}${address}`;\n}\n\n// -------------------- 파일 분리 --------------------\nfor (let i = 0; i < names.length; i++) {\n    const name = normalizeFileName(names[i]);\n    const fileUrl = normalizeFileUrl(addresses[i]);\n    if (!name || !fileUrl) continue;\n\n    if (!noticeFileName) {\n        // 첫 번째 파일은 공고 파일로\n        noticeFileName = name;\n        noticeFileAddress = fileUrl;\n        announcement_file_exist = true;\n    } else {\n        extraFileNames.push(name);\n        extraFilePaths.push(fileUrl);\n    }\n}\n\n// -------------------- 결과 반환 --------------------\nreturn [{\n    json: {\n        fileName: noticeFileName,              // 공고 파일명 (첫 번째 파일)\n        fileAddress: noticeFileAddress,        // 공고 파일 URL\n        file_nm: extraFileNames.join(\"@\"),     // 기타 파일명\n        flpth_nm: extraFilePaths.join(\"@\"),    // 기타 파일 URL\n        announcement_file_exist: announcement_file_exist,\n        creat_p_nttm: formatted,\n        created_ts: formatted,\n        content: items.content                 // 본문 내용\n    }\n}];\n"},"type":"n8n-nodes-base.code","typeVersion":2,"position":[1200,288],"id":"8a0cb7e6-2504-477a-baba-5e9668206df1","name":"내용 정규화"},{"parameters":{"method":"POST","url":"https://www.kistep.re.kr/board.es","sendQuery":true,"queryParameters":{"parameters":[{"name":"mid","value":"a10402000000"},{"name":"bid","value":"0003"}]},"sendHeaders":true,"headerParameters":{"parameters":[{"name":"User-Agent","value":"Mozilla/5.0 (Windows NT 10.0; Win64; x64; rv:142.0) Gecko/20100101 Firefox/142.0"},{"name":"Accept","value":"text/html,application/xhtml+xml,application/xml;q=0.9,*/